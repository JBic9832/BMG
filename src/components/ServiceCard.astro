---
interface Props {
    title: string;
    description: string;
    image: string;
    link: string;
}

const { title, description, image, link } = Astro.props;
---

<div
    class="flex flex-col items-center 2xl:w-1/3 gap-4 text-left bg-white text-black p-8 rounded-3xl shadow-3xl"
>
    <img class="w-16 h-16" src={image} alt={image} />
    <h1 class="text-4xl lg:text-6xl self-start">{title}</h1>
    <p class="text-md sm:text-lg">
        {description}
    </p>
    <!-- <div class="mt-auto self-end">
        <a class="text-primary-blue font-semibold" href=`/${link}`>Learn More</a
        >
    </div> -->
</div>
